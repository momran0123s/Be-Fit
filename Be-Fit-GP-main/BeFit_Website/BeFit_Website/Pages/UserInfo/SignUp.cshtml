@model BeFit_Website.Pages.UserInfo.SignUpModel
@{
    <link href="~/css/register.css" rel="stylesheet" />
    <div class="container" id="container">
        <form method="post" enctype="multipart/form-data">
	        <div class="form-container sign-up-container">
                <div class="Sign-Up-form">

                        <input asp-for="User_UserMacros.CombinedUserMacros.Height" type="number" value="" class="mb-3 form-control" placeholder="Height(cm)"/>
                        <span asp-validation-for="User_UserMacros.CombinedUserMacros.Height" class="text-danger" style="color:#aa0909"></span>
			            
                        <input asp-for="User_UserMacros.CombinedUserMacros.Weight" value="" class="mb-3" placeholder="Weight(kg)" type="number" />
                        <span asp-validation-for="User_UserMacros.CombinedUserMacros.Weight" class="text-danger" style="color:#aa0909"></span>

                        <input type="date" asp-for="User_UserMacros.CombinedUserMacros.DateOfBirth" class="mb-4" value="Date of Birth">
                        <span asp-validation-for="User_UserMacros.CombinedUserMacros.DateOfBirth" class="text-danger" style="color:#aa0909"></span>

                    <div class="row mb-3">
                        <div class="form-group col-md-4">
                            <!-- <label for="inputState">Gender</label> -->
                                <select id="inputState" class="sign-up-select" asp-for="User_UserMacros.CombinedUserMacros.Gender">
                              <option value="" hidden>Gender...</option>
                              <option value="Male">Male</option>
                              <option value="Female">Female</option>
                            </select>
                        </div>
                            <span asp-validation-for="User_UserMacros.CombinedUserMacros.Gender" class="text-danger" style="color:#aa0909"></span>
                        <div class="form-group col-md-4">
                            <!-- <label for="inputState">Goal</label> -->
                                <select id="inputState" class="sign-up-select" asp-for="User_UserMacros.CombinedUserMacros.Goal">
                              <option value="" hidden>Goal...</option>
                              <option value="Gain">Gain</option>
                              <option value="Lose">Lose</option>
                              <option value="Maintain">Maintain</option>
                            </select>
                        </div>
                            <span asp-validation-for="User_UserMacros.CombinedUserMacros.Goal" class="text-danger" style="color:#aa0909"></span>

                        <div class="form-group col-md-4">
                            <!-- <label for="inputState">Activity level</label> -->
                                <select id="inputState" class="sign-up-select" asp-for="User_UserMacros.CombinedUserMacros.ActivityLevel">
                              <option value="" hidden>Activity level...</option>
                              <option value="Sedentary">Sedentary (No Exercise)</option>
                              <option value="Lightly">Lightly Active (1 - 3 days)</option>
                              <option value="Moderately">Moderately Active (3 - 5 days)</option>
                              <option value="Very">Very Active (6 - 7 days)</option>
                              <option value="Extra">Extra Active (twice per day)</option>
                            </select>
                        </div>
                            <span asp-validation-for="User_UserMacros.CombinedUserMacros.Disease" class="text-danger" style="color:#aa0909"></span>
                        <div class="form-group col-md-4">
                            <!-- <label for="inputState">Activity level</label> -->
                            <select id="inputState" class="sign-up-select" asp-for="User_UserMacros.CombinedUserMacros.Disease">
                                <option value="" hidden>Disease...</option>
                                <option value="None">None</option>
                                <option value="Diabetes">Diabetes</option>
                                <option value="Blood Pressure">Blood Pressure</option>
                                <option value="Cholesterol">Cholesterol</option>
                            </select>
                        </div>
                        <span asp-validation-for="User_UserMacros.CombinedUserMacros.Disease" class="text-danger" style="color:#aa0909"></span>
                    </div>

                    <button type="submit" class="signup-btn" asp-page-handler="AddUser">Sign Up</button>
                            
                </div>
       
	        </div>
	        <div class="form-container sign-in-container">
                <div class="Sign-Up-form">
			    <h1 class="Sign-Up-Header">Sign Up</h1>
                    <div class="social-container">
                        <img src="~/photos/be-fit16.png" width="80" draggable="false" />
		             </div>
                    <input asp-for="User_UserMacros.CombinedUser.UserName" type="text" placeholder="User Name" id="username"/>
                    <span asp-validation-for="User_UserMacros.CombinedUser.UserName" class="text-danger" style="color:#aa0909"></span>
                    <input asp-for="User_UserMacros.CombinedUser.Email" type="email"   placeholder="Email" id="email"/>
                    <span asp-validation-for="User_UserMacros.CombinedUser.Email" class="text-danger" style="color:#aa0909"></span>
                    <input asp-for="User_UserMacros.CombinedUser.Password" type="password" placeholder="Password" id="password" minlength="8" />
                    <span asp-validation-for="User_UserMacros.CombinedUser.Password" class="text-danger" style="color:#aa0909"></span>
                </div>
            </div>
            <div class="overlay-container">
		        <div class="overlay">
			        <div class="overlay-panel overlay-left">
				                <h1>Hello, Friend!</h1>
				                <p>To get your plan please continue with filling your macros</p>
				                <button type="button" class="ghost" id="signIn">Back</button>
			        </div>
			        <div class="overlay-panel overlay-right">
                        <h1>Hello, Friend!</h1>
				                <p>Enter your personal details and start journey with us</p>
                        <button type="button" class="ghost" style="display:none;" id="signUp">Next</button>
                            <!-- type="submit" asp-page-handler="AddUser" -->
			        </div>
		        </div>
	        </div>
        </form>
    </div>
}
<script src="~/js/bootstrap.bundle.min.js"></script>
<script src="~/js/bootstrap.js"></script>
<script src="~/js/register.js"></script>
    


  <script>
//   $('#exampleModal').modal('show');
$('#exampleModal').modal({
  keyboard: false
})
  </script>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
`@if (@Model.Msg != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (@Model.Status == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@Model.Msg',
                showConfirmButton: true
            })
        </script>
    }
}