@page
@model BeFit_Website.Pages.UserInfo.EditUserMacrosModel
@{
    <link href="~/css/editusermacros.css" rel="stylesheet" />

    <main role="main">
        <!-- Main jumbotron for a primary marketing message or call to action -->
        <div class="jumbotron">

        </div>
        <div class="container">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4 order-md-2 mb-4">

                    </div>
                    <div class="col-md-8 order-md-1">
                        <h4 class="mb-3 head">User Macros</h4>

                        <div class="mb-3">
                            <label for="Height">Height(cm)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                </div>
                                @if (Model.userMacros.Age > 20 && Model.userMacros.Age < 60)
                                {
                                    <input type="number" asp-for="userMacros.Height" class="form-control" id="Height" placeholder="Height" readonly="true" required>
                                } else
                                {
                                    <input type="number" asp-for="userMacros.Height" class="form-control" id="Height" placeholder="Height" required>
                                }
                            </div>
                        <span asp-validation-for="userMacros.Height" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Weight">Weight(kg)</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            </div>
                            <input type="number" asp-for="userMacros.Weight" class="form-control" id="Weight" placeholder="Weight" required>
                        </div>
                        <span asp-validation-for="userMacros.Weight" class="text-danger"></span>
                    </div>
                        <div class="mb-3">
                            <label for="Age">Date of Birth</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input type="Date" step="1" asp-for="userMacros.DateOfBirth" class="form-control" id="Age" readonly="true" required>
                            </div>
                            <span asp-validation-for="userMacros.Age" class="text-danger"></span>
                        </div>
                    <div class="mb-3">
                        <label for="Age">Age</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                            </div>
                            <input type="number" step="1" asp-for="userMacros.Age" class="form-control" id="Age" placeholder="Age" readonly="true" required>
                        </div>
                        <span asp-validation-for="userMacros.Age" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="inputState">Gender</label>
                            <input asp-for="userMacros.Gender" id="inputState" class="form-control" readonly="true">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">Goal</label>
                            <select id="inputState" class="form-control" asp-for="userMacros.Goal" required>
                              <!--<option value="" hidden>Goal...</option>-->
                              <option value="Gain">Gain</option>
                              <option value="Lose">Lose</option>
                              <option value="Maintain">Maintain</option>
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="inputState">Activity level</label>
                            <select id="inputState" class="form-control" asp-for="userMacros.ActivityLevel" required>
                              <!--<option selected>Activity level...</option>-->
                              <option value="Sedentary">Sedentary (No Exercise)</option>
                              <option value="Lightly">Lightly Active (1 - 3 days)</option>
                              <option value="Moderately">Moderately Active (3 - 5 days)</option>
                              <option value="Very">Very Active (6 - 7 days)</option>
                              <option value="Extra">Extra Active (twice per day)</option>
                            </select>
                        </div>
                        @if (Model.userMacros.Disease == "None")
                        {
                            <div class="form-group col-md-4">
                                        <label for="inputState">Disease</label>
                                        <select id="inputState" class="form-control" asp-for="userMacros.Disease" required>
                                            <!--<option selected>Activity level...</option>-->
                                            <option value="" hidden>Disease...</option>
                                            <option value="None">None</option>
                                            <option value="Diabetes">Diabetes</option>
                                            <option value="Blood Pressure">Blood Pressure</option>
                                            <option value="Cholesterol">Cholesterol</option>
                                        </select>
                                </div>
                                
                            }
                            else
                            {
                            <div class="form-group col-md-4">
                                <label for="inputState">Disease</label>
                                <input asp-for="userMacros.Disease" id="inputState" class="form-control" readonly="true">
                            </div>
                            }
                        </div>
                    <div class="modal-footer">
                         <a asp-page="/UserInfo/EditUserData" class="btn btn-secondary" data-dismiss="modal">Back</a>
                            <button type="submit" id="SaveBtn" class="btn btn-primary" style="background:linear-gradient(to top, #1488cc, #2b32b2);">Save</button>
                    </div>

            </div>
        </div>
        </form>
      </div>
  
      <hr>
  
  </main>
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_NavBar" />
    }
}